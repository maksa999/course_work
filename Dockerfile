# Используйте образ PythonFROM python:3.11-slim# Установите рабочую директориюWORKDIR /app# Копируем зависимостиCOPY requirements.txt .# Устанавливаем зависимостиRUN pip install --no-cache-dir -r requirements.txt# Копируем исходный кодCOPY . .# Запускаем приложениеCMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "10000"]